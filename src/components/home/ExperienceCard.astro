---
// IMPORTING ASTRO ATOMS
import HeadingFour from "../../atoms/headings/Four.astro"
import Button from "../../atoms/buttons/Vanilla.astro"

const {

    src,
    alt,
    title,
    button_text

} = Astro.props
---
<div class="relative border border-zinc-200 p-[1px] group h-full w-full bg-cover hover:scale-110 overflow-hidden duration-300" style=`background-image: url(${ src })`>
    <div class="absolute flex justify-center w-full bottom-0 group-hover:p-2 transition-all duration-500 bg-white group-hover:bg-white/50">
        <div class="flex flex-col gap-2 items-center justify-end h-full w-full py-4 group-hover:p-2 group-hover:border group-hover:border-white transition-all duration-500">
            <HeadingFour>{ title }</HeadingFour>
            <Button>{ button_text }</Button>
        </div>
    </div>
</div>
